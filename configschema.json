{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"obsScenes": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"gameLayout": {
					"type": "string",
					"default": "Game Layout"
				}
			},
			"required": [
				"gameLayout"
			]
		},
		"obsGroups": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"capture1": {
					"type": "string",
					"default": "Game Capture 1"
				},
				"capture2": {
					"type": "string",
					"default": "Game Capture 2"
				},
				"capture3": {
					"type": "string",
					"default": "Game Capture 3"
				},
				"capture4": {
					"type": "string",
					"default": "Game Capture 4"
				},
				"camera1": {
					"type": "string",
					"default": "Camera Capture 1"
				},
				"camera2": {
					"type": "string",
					"default": "Camera Capture 2"
				}
			},
			"required": [
				"capture1",
				"capture2",
				"capture3",
				"capture4",
				"camera1",
				"camera2"
			]
		},
		"obsSources": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"rack1": {
					"type": "string",
					"default": "Rack 1"
				},
				"rack2": {
					"type": "string",
					"default": "Rack 2"
				},
				"rack3": {
					"type": "string",
					"default": "Rack 3"
				},
				"rack4": {
					"type": "string",
					"default": "Rack 4"
				},
				"camSource1": {
					"type": "string",
					"default": "Camera 1"
				},
				"camSource2": {
					"type": "string",
					"default": "Camera 2"
				}
			},
			"required": [
				"rack1",
				"rack2",
				"rack3",
				"rack4",
				"camSource1",
				"camSource2"
			]
		},
		"emergencyMode": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"scene": {
					"type": "string",
					"default": "Emergency Scene"
				},
				"audioSource": {
					"type": "string",
					"default": "Mic/Aux"
				}
			},
			"required": [
				"scene",
				"audioSource"
			]
		}
	},
	"required": [
		"obsScenes",
		"obsGroups",
		"obsSources",
		"emergencyMode"
	]
}